<main class="p-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body"> 
                    {{#with navigation}}
                        {{#each links}}
                        <button href="{{href}}" class="btn btn-link">{{text}}</button>
                        {{/each}}
                    {{/with}}
                        <a href="#" class="btn btn-link disabled">Link</a>
                        
        </div>
    </div>
    <br>
            
            {{#with newsBlock}}
                <h5 class="text-center">{{title}}</h5>
                <div class="row row-cols-4">
    <br>                
                            {{#each cards}}
                                <div class="card">
                                    <div class="card-header">{{title}}
                                        {{#if isTop isTop=true}}
                                            <button class="rounded-pill btn btn-sm btn-primary">{{isTop}}</button>
                                            {{else}}
                                        {{/if}}
                                        {{#if isNew isNew=true}}
                                            <button class="rounded-pill btn btn-sm btn-success">{{isNew}}</button>
                                        {{else}}
                                        {{/if}}
                                    </div>
                                    <div class="card-body">{{description}}</div>
                                </div>       
                            {{/each}}
                </div>                      
                    {{/with}} 

           
                            
                <hr>
                <div>
                    {{#with goodsBlock}}
                        {{#each tabs}}       
                            <div class="nav nav-tabs">
                                <div class="nav-item">  
                                    {{#if isActive isActive=true}}
                                        <a class="nav-link active">{{text}}</a>
                                        {{else}}
                                        <a class="nav-link">{{text}}</a>
                                    {{/if}}
                                </div>
                            </div>
                        {{/each}}  
                    <div class="row row-cols-3">         
                        {{#each cards}}
                            <div class="card">
                                <img src="https://picsum.photos/400/200" class="card-img-top" alt="Product Photo">
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}</h5>
                                    {{#if isHot isHot=true}}
                                        <button class="rounded-pill btn btn-warning">HOT!</button>
                                        {{else}}
                                    {{/if}}
                                    {{#if isNew isNew=true}}
                                        <button class="rounded-pill btn btn-primary">NEW</button>
                                        {{else}}
                                    {{/if}}
                                    <div>{{description}}</div>
                                </div>
                            </div>
                        {{/each}}
                    </div> 
                    {{/with}}
                </div>
                <div class="card">
                    <div class="card-body text-bg-dark">
                    {{#with subscribe}}
                    <h2>{{header}}</h2>
                    <p>{{description}}</p>
                  
                    {{#each buttons}}
                    <ul>
                    <button href="{{link}}" class="btn btn-primary">{{text}}</button>
                    </ul>
                    {{/each}}
                    
                    {{/with}}
                    </div>
                </div>
                <hr>
                <div class="card">
                    <div class="card-body text-bg-success">                                
                        <div class="text-center">
                            {{#with service}}
                            <h2>{{title}}</h2>
                            <p>{{description}}</p>
                            {{#each buttons}}
                                <button href="{{link}}" class="btn btn-primary">{{text}}</button>
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>         
                </div>
                <hr>
                <footer>
                    
                        {{#each footer}}    
                         
                         <div>{{text}}</div>
                       
                        
                        
                        {{/each}} 
                 </footer>         
        </div>
    </div>
               
</main>
        


        
       
    


{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
{{#with main}}
    <main>
        <section>
            <div>
                <h2>{{> title data=summary.title}}</h2>
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>

        <section>
            {{#with experience}}
            <div>
                <h3>{{title}}</h3>
            </div>
            <div>
                <p>
                   {{text}} 
                </p>
            </div>
            {{/with}}
        </section>
    </main>
{{/with}}

</div>


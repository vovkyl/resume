{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
{{#with main}}
    <main>
        <section>
            <div>
                <h2>{{> title data="Work history" big=true}}</h2>
            </div>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                         <div>{{position}}</div>

                         <br>

                         <div>
                            {{duration.from}}  -
                            {{#if duration.to}} 
                                {{duration.to}} 
                             {{else}} 
                                (work now)
                             {{/if}}
                        </div> 

                         <br>

                        <div>{{> link text=company.name href=company.url blank=true noLine=true}}
							--

                            {{#if company.url}} 
                                {{company.name}}
                             {{else}} 
                                company name
                             {{/if}}</div>

                        <br>
                        <br>
                         
                        <div><strong>Projects ({{projectAmount}})</strong></div>
                        
                        <br>
						
                        <ul>
							{{#each projects}}
                         		<li>
									<div>{{> link text=name href=url blank=true noLine=true}}</div>
									<br>
									<div><p>{{about}}</p></div>									
								</li>
								<br>
								<div>
									<em>Project stacks</em>
								</div>
								{{#each stacks}}
									<li>
										<div>{{name}}</div>										
									</li>
								{{/each}}
								
								<br>
								{{#each stacks}}
									<li>
										<div>{{name}}</div>										
									</li>
								{{/each}}
								<br>
								<div>
									<em>Project awards</em>
								</div>
								<br>
								{{#each awards}}
									<li>
										<div>{{name}}-{{awardsAmount}}</div>
									</li>
								{{/each}}	
							{{/each}}
                        </ul>    
                    </li>
                    {{/each}}
               </ul>
            </div>
        </section>
    </main>
{{/with}}

</div>


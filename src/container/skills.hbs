{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data=summary.title}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}

                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (TOP) {{/if}}

                    {{#unless point includeZero=true}} (not study) {{/unless}}

                    {{#unless point }}
                    {{#if point includeZero=true}} (now study) {{/if}}
                     {{/unless}}

                </li>
                
                {{/each}}                
            </ul>
        </section>

        <section>
            <h3>'My hobbies'</h3> 
             
             <ol>
                {{#each hobbies}} 
                <li>
                    {{name}}
                    {{#if isMain isMain = true}}('favorite'){{/if}}
                </li>
                {{/each}}
            </ol>                   
        </section>
    </main>
    {{/with}}
</div>

